<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user,
    _size: Settings.microposts.gravatar_size.default) %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %>
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %> <%= time_ago_in_words(micropost.created_at) %> <%= t ".ago" %>.
    <% if current_user? micropost.user %>
      <%= link_to t(".delete"), micropost, method: :delete,
        data: { comfirm: t(".you_sure?") } %>
    <% end %>
  </span>
</li>
